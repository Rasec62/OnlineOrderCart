@model IEnumerable<IncUserOrdersVModel>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "Index Order Incentive";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" />

@*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap.min.css" />*@

<br />
<div class="row">
    <div class="col">
        <h1>Order Incentive</h1>
    </div>
    <div class="col text-right">
        <a asp-action="NewOrderIncentive" class="btn btn-outline-primary" style="border-radius: 60px;">New Order</a>
    </div>
</div>
<br />

<div class="container">
    <div class="row">
        <div class="col-sm">
            <div class="card text-center">
                <div class="card-header">
                    <flash dismissable="true" />
                </div>
                <div class="card-body">
                    <h5 class="card-title">Special Details</h5>
                    <table class="table table-striped display" id="example" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    @localizer["OrderDate"]
                                </th>
                                <th>
                                    @localizer["Debtor"]
                                </th>
                                <th>
                                    @localizer["BusinessName"]
                                </th>
                                <th>
                                    @localizer["User"]
                                </th>
                                <th>
                                    @localizer["OrderStatus"]
                                </th>
                                <th>
                                    @localizer["Observations"]
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateLocal)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Debtor)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BusinessName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OrderStatus)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Observations)
                                </td>
                                <td>
                                    <a asp-action="OrderConfirmationI" asp-route-id="@item.IncentiveOrderId" class="btn btn-outline-warning" style="border-radius: 60px;"><i class="fas fa-fighter-jet"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.IncentiveOrderId" class="btn btn-outline-info" style="border-radius: 60px;"><i class="fab fa-leanpub"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-muted">
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

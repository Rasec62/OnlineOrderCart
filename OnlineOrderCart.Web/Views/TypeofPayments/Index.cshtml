@model IEnumerable<TypeofPayments>

@{
    ViewData["Title"] = "Type of Payments";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" />
<div class="row">
    <div class="col">
        <h1>Type of Payments</h1>
    </div>
    <div class="col text-right">
        <a asp-action="Create" class="btn btn-outline-success" style="border-radius: 60px;"><i class="fas fa-feather"></i> New Type of Payment</a>
    </div>
</div>
<br />
<table class="display" id="example" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PaymentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodeKey)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodeKey)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TypeofPaymentId" class="btn btn-outline-warning" style="border-radius: 60px;"><i class="fas fa-snowplow"></i></a> 
                    <a asp-action="Details" asp-route-id="@item.TypeofPaymentId" class="btn btn-outline-secondary" style="border-radius: 60px;"><i class="fas fa-space-shuttle"></i></a> 
                    <button data-id="@item.TypeofPaymentId" class="btn btn-outline-danger deleteItem" data-toggle="modal" data-target="#deleteDialog" style="border-radius: 60px;"><i class="fas fa-skull-crossbones"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="/js/deleteDialog.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#example').DataTable({
                "order": [[2, "desc"]],
                "lengthMenu": [[5,10, 25, 50, -1], [5,10, 25, 50, "All"]]
            });

            // Delete item
            sc_deleteDialog.openModal('deleteItem', true, 'btnYesDelete', '/Roles/Delete/', false);
        });</script>
}

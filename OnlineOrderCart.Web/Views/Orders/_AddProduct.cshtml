@model AddItemViewModel
    <!--Modal Body Start-->

<div class="modal-content">

    <!--Modal Header Start-->
    <div class="modal-header">
        <h4 class="modal-title">Add Product</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <!--Modal Header End-->


    <form asp-action="AddProduct" asp-controller="Orders" method="post" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <div class="modal-body form-horizontal">
            <div class="form-group row">
                @Html.HiddenFor(model => model.Debtor)
                @Html.LabelFor(model => model.Quantity, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    <input asp-for="@Model.Quantity" placeholder="Enter Name" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Observations, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    <input asp-for="@Model.Observations" class="form-control" placeholder="Please enter your address here" required />
                </div>
            </div>
            <div class="form-group row">
                    <label asp-for="DeatilStoreId" class="control-label"></label>
                    <select asp-for="DeatilStoreId" asp-items="Model.CombosDWProducts" class="form-control" required></select>
                    <span asp-validation-for="DeatilStoreId" class="text-danger"></span>
            </div>
        </div>
        <!--Modal Footer Start-->
        <div class="modal-footer">
            <button data-dismiss="modal" id="cancel" class="btn btn-default" type="button">Cancel</button>
            <button class="btn btn-success relative" id="btnSubmit" type="submit">
                <i class="loader"></i>
                Submit
            </button>
        </div>
        <!--Modal Footer End-->
    </form>

</div>


<!--Modal Body End-->

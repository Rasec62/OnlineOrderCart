@model IEnumerable<Roles>
@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" />
<br />
<div class="row">
    <div class="col">
        <h1></h1>
    </div>
    <div class="col text-right">
        <p>
            <a asp-action="Create" class="btn btn-outline-primary"  style="border-radius: 60px;" onclick="showPleaseWait();"><i class="glyphicon glyphicon-plus"></i> New</a>
        </p>
    </div>
</div>

<flash dismissable="true" />
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-heading">
            <div class="panel-heading">
                <h3 class="panel-title">Roles</h3>
            </div>
            <div class="panel-body">
                <table class="display" id="example" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.RolName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CodeKey)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RolName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CodeKey)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.RolId" class="btn btn-outline-warning"  style="border-radius: 60px;" onclick="showPleaseWait();"><i class="glyphicon glyphicon-pencil"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.RolId" class="btn btn-outline-info"  style="border-radius: 60px;" onclick="showPleaseWait();"><i class="glyphicon glyphicon glyphicon-align-justify"></i></a>
                                    <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.RolId"  style="border-radius: 60px;" id="btnDelete" onclick="return confirm('¿ Are you sure to delete this Roles?');"><i class="glyphicon glyphicon-trash"></i> </a>
                                    @*<button data-id="@item.RolId" class="btn btn-outline-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><i class="glyphicon glyphicon-trash" style="border-radius: 60px;"></i></button>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="~/js/deleteDialog.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#example').DataTable({
                "order": [[2, "desc"]],
                "lengthMenu": [[5,10, 25, 50, -1], [5,10, 25, 50, "All"]]
            });

            // Delete item
            sc_deleteDialog.openModal('deleteItem', true, 'btnYesDelete', '/Roles/Delete/', false);
        });</script>
}

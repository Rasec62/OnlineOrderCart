@model Purposes
@{
    ViewData["Title"] = "Edit";
}

<hr />
<div class="card text-center border-primary mb-3" style="max-width: 78rem;">
    <div class="card-header">
        <h1>Purposes Edit</h1>
        <flash dismissable="true" />
    </div>
    <form asp-action="Edit">
        <input type="hidden" asp-for="PurposeId" />
        <input type="hidden" asp-for="IsDeleted" />
        <input type="hidden" asp-for="RegistrationDate" />
        <div class="card-body text-primary">
            <h5 class="card-title"></h5>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="_Purposes" />
        </div>
        <div class="card-footer bg-transparent border-warning">
            <div class="form-group">
                <button type="submit" class="btn btn-outline-primary"><i class="far fa-save"></i> Save Record</button>
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-paper-plane"></i> Back to List</a>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

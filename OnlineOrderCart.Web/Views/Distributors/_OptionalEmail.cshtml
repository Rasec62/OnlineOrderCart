@model OptionemailViewModel
<div class="row">
    <div class="col">
        <input type="text" asp-for="BusinessName" class="form-control" style="float: left; text-align: center; border-radius: 60px;" readonly>
    </div>
    <div class="col">
        <input type="text" asp-for="Debtor" class="form-control" style="float: left; text-align: center; border-radius: 60px;" readonly>
    </div>
</div>

<div class="form-group">
    <label asp-for="OptionalEmail" class="control-label"></label>
    <input asp-for="OptionalEmail" class="form-control" placeholder="Optional Email" style="float: left; text-align: center; border-radius: 60px;" required />
    <span asp-validation-for="OptionalEmail" class="text-danger"></span>
</div>
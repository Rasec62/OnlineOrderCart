@model RecoverPasswordViewModel

@{ ViewData["Title"] = "Recover Password"; }

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Recover Password</h5>
                    <form class="form-signin" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <flash dismissable="true" />
                        <div class="form-label-group">
                            <input asp-for="Email" class="form-control" type="email" id="inputEmail" placeholder="User Name" required />
                            <label for="inputEmail">Email address</label>
                            <span asp-validation-for="Email" class="text-warning"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Recover password" class="btn btn-outline-primary" />
                            <a asp-action="Login" class="btn btn-outline-secondary">Back to login</a>
                        </div>
                    </form>
                    <div class="text-success">
                        <p>
                            @ViewBag.Message
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<!--Delete Item-->
<div class="modal fade" id="deleteDialog" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header"style="background:#d9534f;color:white;">
                <h5 class="modal-title" id="exampleModalLabel">@localizer["Remove"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>@localizer["DeleteRecord"]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">@localizer["Cancel"]</button>
                <button type="button" class="btn btn-outline-danger" id="btnYesDelete">@localizer["Delete"]</button>
            </div>
        </div>
    </div>
</div>

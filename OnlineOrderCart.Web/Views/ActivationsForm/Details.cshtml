@model ActivationsForm
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = @localizer["Details"];
}

<div class="card text-center border-danger mb-3" style="max-width: 78rem;">
    <div class="card-header bg-transparent border-secondary">@localizer["DetailActivationForm"]</div>
    <div class="card-body text-dark">
        <h5 class="card-title"></h5>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.CodeKey)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CodeKey)
            </dd>
        </dl>
    </div>
    <div class="card-footer bg-transparent border-warning">
        <a asp-action="Edit" asp-route-id="@Model.ActivationFormId" class="btn btn-outline-warning" onclick="showPleaseWait();"><i class="fas fa-snowplow"></i> @localizer["Edit"]</a>
        <a asp-action="Index" class="btn btn-outline-secondary" onclick="showPleaseWait();"><i class="fas fa-paper-plane"></i> @localizer["BacktoList"]</a>
    </div>
</div>
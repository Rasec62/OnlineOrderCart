@model AddUserViewModel
@{
    ViewData["Title"] = "EditCoordinator";
}

<h1>EditCoordinator</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="EditCoordinator" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Password" />
            <input type="hidden" asp-for="PasswordConfirm" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="KamManagerId" />
            <input type="hidden" asp-for="Username" />
            <input type="hidden" asp-for="KamId" />
            <flash dismissable="true" />
            <div class="card border-secondary text-center mb-3" style="max-width: 70rem;">
                <div class="card-header  bg-transparent border-dark">
                    <h2>Register</h2>
                </div>
                <div class="card-body text-dark">
                    <div class="form-row">
                        <div class="col-md-4 mb-6">
                            <div class="form-group">
                                <label asp-for="RolId" class="control-label"></label>
                                <select asp-for="RolId" asp-items="Model.ComboRoles" class="form-control" style="float: left;text-align: center;border-radius: 60px;"></select>
                                <span asp-validation-for="RolId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4 mb-6">
                            <div class="form-group">
                                <label asp-for="GenderId" class="control-label"></label>
                                <select asp-for="GenderId" asp-items="Model.ComboGender" class="form-control" style="float: left;text-align: center;border-radius: 60px;"></select>
                                <span asp-validation-for="GenderId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4 mb-6">
                            <div class="form-group">
                                <label asp-for="KamManagerId" class="control-label"></label>
                                <select asp-for="KamManagerId" asp-items="Model.ComboKams" class="form-control" style="float: left;text-align: center;border-radius: 60px;"></select>
                                <span asp-validation-for="KamManagerId" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <partial name="_Users" />

                    <hr />
                </div>
                <div class="card-footer  bg-transparent border-secondary text-muted">
                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-primary btn-block text-uppercase" style="border-radius: 60px;"><span class="glyphicon glyphicon-floppy-saved"></span> Guardar Registro</button>
                        <a asp-controller="Coordinator" asp-action="Index" class="btn btn-outline-secondary btn-block text-uppercase" style="border-radius: 60px;"><i class="glyphicon glyphicon-arrow-left"></i> Volver a la Lista</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <hr />
    <div class="col-md-4">
        <div class="card border-secondary mb-3" style="max-width: 48rem;">
            <div class="card-header bg-transparent border-secondary"></div>
            <div class="card-body text-dark">
                <h5 class="card-title">Avatar</h5>
                <div class="form-group">
                    @*<img class="lazyload" src="@Model.PicturePath" style="width:250px; height:100px; max-width: 100%; height: auto;" id="imagePreview" />*@
                    <img class="lazyload" src="@Url.Content(Model.PictureFPath)" alt="Image" style="width:250px;height:100px;max-width: 100%; height: auto; border-radius:50%" id="imagePreview" />
                </div>
            </div>
            <div class="card-footer bg-transparent border-secondary"></div>
        </div>
    </div>
</div>

<div class="text-success">
    <p>
        @ViewBag.Message
    </p>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $('#verPassword').on('mousedown', function () {
            $('#Password').attr("type", "text");
        });

        $('#verPassword').on('mouseup mouseleave', function () {
            $('#Password').attr("type", "password");
        });
    </script>
}

